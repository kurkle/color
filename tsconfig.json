{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"moduleResolution": "NodeNext",
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": false,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"noImplicitThis": true
	},
	"files": [
		"./color.d.ts"
	],
	"typedocOptions": {
		"name": "@kurkle/color",
		"entryPoints": ["./color.d.ts"],
		"excludeExternals": true,
		"includeVersion": true,
		"out": "./docs",
	},
}
